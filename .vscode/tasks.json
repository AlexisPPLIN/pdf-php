{
    // This task will start php in background (WINDOWS)
    "version": "0.1.0",
    "command": "php",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "PHP Local Server (Port 9000)",
            "args": [
                "-S", "localhost:9000"
            ]
        },
        {
            "taskName": "PHP Public Server (Port 80)",
            "args": [
                "-S", "0.0.0.0:80"
            ]
        }
    ]
}